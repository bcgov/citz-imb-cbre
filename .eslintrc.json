{
    // TODO: add jest to env
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
        //     "jest": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc",
        "prettier" // * prettier should be the last plugin
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "tsdoc/syntax": "warn"
    }
}
